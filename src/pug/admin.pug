doctype html
html
    head 
        title Jelmer Halff - Admin
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css", integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65", crossorigin="anonymous")
        style 
            include ../../public/compiled/style.css

    body
        div.admin
            div.title.center-content
                h1 Admin Dashboard

            div.container
                div.projects
                    div.row.header
                        div.col-6 
                            h2 Projects
                        div.col-6
                            button(onClick="openModal('project', 'new')") New
                    table.table
                        tr 
                            th
                            th Id 
                            th Name 
                            th Tags
                            th 
                        tr
                            td 
                                img(src="/img/placeholder.png")
                            td 0
                            td Awesome Website 2000
                            td HTML, JS, Node, Mysql, Express
                            th
                                button Edit

                    div.modal.modal-project
                        div.center-content
                            form(action="/projects/edit" method="POST")
                                div.row.header
                                    div.col-6 
                                        h2 Project
                                    div.col-6
                                        button#modal-save.green(type="submit") Save
                                        button#modal-cancel(type="button" onClick="closeModal()") Cancel

                                p Name
                                input(type="text", name="username")
                                p Tags 
                                input(type="text", name="tags")


                
    
        script
            include ../js/admin.js